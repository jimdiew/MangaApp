<mvc:View
    controllerName="com.pampa.zacademiaej.controller.Platos"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m">
        <Page title="{i18n>titlePlatos}" showHeader="true" showNavButton="true" navButtonPress="onNavBack">
            <Table id="tablePlatos" items="{Platos>/}">
                <columns>
                    <Column>
                        <Text text="Nombre"/>
                    </Column>
                    <Column>
                        <Text text="Tipo de Plato"/>
                    </Column>
                    <Column>
                        <Text text="{i18n>col_aptoceliaco}"/>
                    </Column>
                    <Column hAlign="Center">
                        <Text text="Precio"/>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{Platos>Nombre}"/>
                            <Text text="{Platos>Tipo}"/>
                            <Text text="{path: 'Platos>AptoCeliaco', formatter: '.formatter.aptoCeliaco'}"/>
                            <ObjectNumber number="{parts:['Platos>Precio', 'ARS'], type: 'sap.ui.model.type.Currency'}" unit="ARS"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </Page>
</mvc:View>
